<div class="container"> 
    <div class="lead well well-lg" style="background-color: cornsilk;">
        <div class="media">
            <div class="media-left">
                <a href="#">
                    <img class="media-object" src="<%= @question.gravatar %>">
                </a>
            </div>
            <div class="media-body">
                <h5 class="mt-0"><%= @question.email %> asked: </h5>
                <%= @question.body %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div>
                <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#answerModal">Submit new answer</a>
            </div>

            <%= render 'home/new_answer_form' %>

            <% @answers.each do |answer| %>
                <div class="media">
                    <div class="media-left">
                        <a href="#">
                            <img class="media-object" src=<%= answer.gravatar %> />
                        </a>
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading"> <%= answer.email %> answered: </h4>
                        <div><%= time_ago_in_words answer.created_at %> ago</div>
                        <%= answer.body %>
                    </div>
                </div>
            <% end %>

        </div>  
    </div>
</div>
